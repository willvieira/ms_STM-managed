  doi = {10.1016/j.foreco.2018.04.027},
  file = {:Users/wvieira/Documents/Mendeley Desktop/Bianchi et al. - 2018 - Light-growth responses of Sitka spruce, Douglas fir and western hemlock regeneration under continuous cover fore.pdf:pdf},
  issn = {03781127},
  journal = {Forest Ecology and Management},
  number = {February},
  pages = {241--252},
  publisher = {Elsevier},
  title = {{Light-growth responses of Sitka spruce, Douglas fir and western hemlock regeneration under continuous cover forestry}},
  url = {https://doi.org/10.1016/j.foreco.2018.04.027},
  volume = {422},
  year = {2018},
}

