  isbn = {0006-3207},
  issn = {00063207},
  journal = {Biological Conservation},
  keywords = {Assisted colonization,Assisted migration,Climate change adaptation,Debate,Managed relocation},
  number = {11},
  pages = {2560--2572},
  publisher = {Elsevier Ltd},
  title = {{Taking stock of the assisted migration debate}},
