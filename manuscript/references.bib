  file = {:Users/wvieira/Documents/Mendeley Desktop/Solarik et al. - 2018 - Local adaptation of trees at the range margins impacts range shifts in the face of climate change.pdf:pdf},
  issn = {14668238},
  journal = {Global Ecology and Biogeography},
  keywords = {biotic interactions,climate change,demography,local adaptation,migration,provenance,range shift,regeneration temperate–boreal ecotone},
