  isbn = {0022-5193},
  issn = {10958541},
  journal = {Journal of Theoretical Biology},
  keywords = {Ecological equilibrium,Intrinsic stability,Persistent perturbation,Pulse-perturbation,Transient dynamics},
  pages = {47--59},
  pmid = {26542944},
  publisher = {Elsevier},
  title = {{Resilience, reactivity and variability: A mathematical comparison of ecological stability measures}},
  url = {http://dx.doi.org/10.1016/j.jtbi.2015.10.012},
  volume = {389},
  year = {2016},
}

